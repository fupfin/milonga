<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<bean id="atmosFunctionChecker" class="com.skp.milonga.servlet.checker.AtmosFunctionChecker">
		<property name="validatorList">
			<list>
				<value>com.skp.milonga.servlet.checker.AtmosHttpRequestHandlerValidator</value>
				<value>com.skp.milonga.servlet.checker.AtmosControllerHandlerValidator</value>
			</list>
		</property>
	</bean>
	
	<bean id="atmosRequestMappingInfoStorage" class="com.skp.milonga.rhino.AtmosRequestMappingInfoStorage"/>
</beans>
